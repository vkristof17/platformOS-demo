<h2>To Do List</h2>
{% liquid
  graphql items = 'item/search'
%}
  <ul class="list-group">
    {% for item in items.records.results %}
      <li class="list-group-item">
        <form action="item/delete" method="post">
          <div class="row">
            <div class="col">
              <h5>{{ item.title }}</h5>
            </div>
            <div class="col">
              <input type="hidden" name="id" value="{{ item.id }}">
              <button type="submit" class="btn btn-primary">Mark as done</button>
            </div>
          </div>
        </form>
      </li>
    {% endfor %}
  </ul>
<form action="/item/create" method="post">
  <input type="text" id="title" name="title" class="form-control m-2">
  <input type="submit" value="Submit" class="btn btn-primary ml-4">
</form>